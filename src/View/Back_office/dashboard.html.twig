{% extends "layout.html.twig" %}

{% block title %}Admin Strascook
{% endblock %}

{% block stylesheet %}<link rel="stylesheet" href="/assets/css/back_office_style.css">{% endblock %}

{% block content %}

	<h1 class="fs-3 m-4 mb-5">Bienvenue sur votre espace administrateur</h1>

	<div class="container text-center">
		<section class="online m-4">
			<h3>Actuellement sur le site</h3>
			<div class="row gap-5 justify-content-center">

				{% for product in products %}

					<div class="card mb-3 col-sm-6 col-md-4 col-lg-4  " style="max-width: 540px;">
						<div class="row g-0 align-items-center">
							<div class="col-md-4 ">
								<img src="https://cdn-icons.flaticon.com/png/512/2095/premium/2095671.png?token=exp=1650551127~hmac=691a1680f7c5dc9abe0ade5bfd0485b5" class="img-fluid rounded-start default-pict" alt="default food picture">
							</div>
							<div class="col-md-8">
								<div class="card-body">
									<h5 class="card-title text-wrap ">
										{{product.name}}
									</h5>
									<p class="card-text"></p>

									<p class="card-text mb-0">
										<small class="text-muted">Ajouté le 21/04/2022 à 16:20</small>
									</p>
									<p class="card-text">
										<small class="text-muted">Last updated 3 mins ago</small>
									</p>

									<button type="button" class="btn btn-warning">Modifier</button>
									<button type="button" class="btn btn-danger">Supprimer</button>
								</div>
							</div>
						</div>
					</div>

				{% endfor %}
			</div>
			<div class="text-center">

				<button type="button" class="btn btn-primary col-4 mt-4">Ajouter</button>
			</div>


		</section>

		<section class='ongoing_order m-4'>
			<h3>Commandes en cours</h3>
		</section>
	</div>

	{{dump(products)}}

{% endblock %}

{% block javascript %}{% endblock %}
