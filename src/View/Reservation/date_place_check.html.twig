{% extends "layout.html.twig" %}


{% block title %}
	ðŸ“† Confirmation date et lieu
{% endblock %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/reservation_style.css">
{% endblock %}

{% block content %}

	<div class=" container border border-1 rounded-3 shadow mt-4 mb-5 col-11 col-md-9">
		<div class="container mt-4 mb-4 text-center col-12 col-md-11 ">
			<h2>Afin que nous puissions traiter votre demande,<br>
				merci de renseigner la date souhaitÃ©e pour la reservation ainsi que votre adresse :</h2>

		</div>

		{% if error is not empty and empty_fields is empty %}

			<div class="alert alert-warning m-auto mb-5 col-12 col-md-8" role="alert">
				<h4 class="alert-heading">Oups !</h4>
				<hr>
				<ul>
					{% for item in error %}
						<li class="mb-0">{{item}}</li>
					{% endfor %}
				</ul>

			</div>

		{% endif %}

		<div class="container mt-2 mb-4">
			<form action="" method='POST'>
				<div>
					<div class="row flex-nowrap justify-content-center flex-column flex-md-row">
						<div class="col-12 col-md-6">
							<div class="input-group mb-3">
								<span class="input-group-text" id="basic-addon1">Date</span>
								<input type="date" class="form-control" placeholder="jj/mm/aaaa" aria-label="Username" aria-describedby="basic-addon1" name='date' min='{{limite_date}}'>
							</div>
							<div class="input-group mb-3">
								<span class="input-group-text" id="basic-addon1">Rue</span>
								<input type="text" class="form-control" aria-label="Username" aria-describedby="basic-addon1" name='street'>
							</div>
							<div class="input-group mb-3">
								<span class="input-group-text" id="basic-addon1">Ville</span>
								<input type="text" class="form-control" aria-label="Username" aria-describedby="basic-addon1" name='city'>
							</div>

						</div>
						<div class="col-12 col-md-5 d-flex flex-column justify-content-end">
							<div class="input-group mb-3">
								<span class="input-group-text" id="basic-addon1">Code Postal</span>
								<input type="text" class="form-control" aria-label="Username" aria-describedby="basic-addon1" name='post_code'>
							</div>

							<div class="input-group mb-3 col-6">
								<span class="input-group-text" id="basic-addon1">NÂ°</span>
								<input type="text" class="form-control" aria-label="Username" aria-describedby="basic-addon1" name='home_number'>
							</div>
						</div>
					</div>

					{% if empty_fields is not empty %}

						<div class="alert alert-danger col-10 col-md-6 m-auto mb-0" role="alert">
							<h4 class="alert-heading fs-6">Merci de renseigner le(s) champ(s) suivant(s) :</h4>
							<hr>
							<ul class='m-0'>
								{% for error in empty_fields %}
									<li class="mb-0">{{error}}</li>
								{% endfor %}
							</ul>

						</div>

					{% endif %}
					<div class="text-center pt-3"><input type="submit" class="btn btn-primary btn-lg" value='Confirmer'></div>
				</form>
			</div>
		</div>
	</div>

{% endblock %}
